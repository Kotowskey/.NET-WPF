<UserControl x:Class="Bookstore.Views.StatisticsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Bookstore.Views"
             Height="Auto" Width="Auto">
    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="Statystyki" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="0 0 0 16"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                <TextBlock Text="Liczba książek:" FontWeight="Bold"/>
                <TextBlock x:Name="BooksCountText" Margin="8 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                <TextBlock Text="Liczba ofert:" FontWeight="Bold"/>
                <TextBlock x:Name="OffersCountText" Margin="8 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
                <TextBlock Text="Liczba użytkowników:" FontWeight="Bold"/>
                <TextBlock x:Name="UsersCountText" Margin="8 0"/>
            </StackPanel>
            <!-- Dodaj więcej statystyk według potrzeb -->
        </StackPanel>
    </Grid>
</UserControl>
