<UserControl x:Class="Bookstore.Views.StatisticsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bookstore.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:Bookstore.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModels:StatisticsViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 0 0 16">
            <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                       Margin="0 0 0 8">
                Statystyki księgarni
            </TextBlock>
            <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" 
                       Margin="0 0 0 16">
                Przegląd statystyk i danych księgarni.
            </TextBlock>
            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    Command="{Binding RefreshCommand}"
                    HorizontalAlignment="Right"
                    Margin="0 0 8 0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" Margin="0 0 8 0"/>
                    <TextBlock>Odśwież statystyki</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Row="1">
            <WrapPanel Orientation="Horizontal" 
                       VerticalAlignment="Top" 
                       HorizontalAlignment="Center"
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityInverseConverter}}">
                
                <!-- Książki -->
                <materialDesign:Card Width="220" Margin="10" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 16">
                            <materialDesign:PackIcon Kind="BookMultiple" Width="24" Height="24" VerticalAlignment="Center"/>
                            <TextBlock Text="Książki" FontSize="18" FontWeight="Medium" Margin="8 0 0 0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding BooksCount}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Liczba dostępnych książek" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Opacity=".68"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Autorzy -->
                <materialDesign:Card Width="220" Margin="10" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 16">
                            <materialDesign:PackIcon Kind="AccountMultiple" Width="24" Height="24" VerticalAlignment="Center"/>
                            <TextBlock Text="Autorzy" FontSize="18" FontWeight="Medium" Margin="8 0 0 0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding AuthorsCount}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Liczba autorów" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Opacity=".68"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Gatunki -->
                <materialDesign:Card Width="220" Margin="10" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 16">
                            <materialDesign:PackIcon Kind="FormatListBulleted" Width="24" Height="24" VerticalAlignment="Center"/>
                            <TextBlock Text="Gatunki" FontSize="18" FontWeight="Medium" Margin="8 0 0 0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding GenresCount}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Liczba gatunków" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Opacity=".68"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Wydawnictwa -->
                <materialDesign:Card Width="220" Margin="10" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 16">
                            <materialDesign:PackIcon Kind="DomainHome" Width="24" Height="24" VerticalAlignment="Center"/>
                            <TextBlock Text="Wydawnictwa" FontSize="18" FontWeight="Medium" Margin="8 0 0 0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding PublishersCount}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Liczba wydawnictw" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Opacity=".68"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Użytkownicy -->
                <materialDesign:Card Width="220" Margin="10" Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 16">
                            <materialDesign:PackIcon Kind="AccountMultiple" Width="24" Height="24" VerticalAlignment="Center"/>
                            <TextBlock Text="Użytkownicy" FontSize="18" FontWeight="Medium" Margin="8 0 0 0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding UsersCount}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Liczba użytkowników" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   Opacity=".68"/>
                    </StackPanel>
                </materialDesign:Card>
            </WrapPanel>

            <!-- Loading indicator -->
            <materialDesign:Card HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Padding="16"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                IsIndeterminate="True"
                                HorizontalAlignment="Center"
                                Margin="0 0 0 16"/>
                    <TextBlock Text="Ładowanie statystyk..."
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>
