<Window x:Class="Bookstore.Views.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Bookstore.Views"
        Title="Panel administratora" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Przykładowy podział na kolumny: menu + treść -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel nawigacyjny po lewej -->
        <StackPanel Grid.Column="0" Background="#F2F2F2">
            <TextBlock Text="Admin Panel" FontWeight="Bold" FontSize="24" 
                       Margin="10,10,0,10"/>
            <ListView x:Name="NavListView" SelectionChanged="NavListView_SelectionChanged"
                      BorderThickness="0" Margin="0,0,0,0">
                <ListViewItem x:Name="DashboardItem">Dashboard</ListViewItem>
                <ListViewItem x:Name="BooksItem">Książki</ListViewItem>
                <ListViewItem x:Name="UsersItem">Użytkownicy</ListViewItem>
                <ListViewItem x:Name="OrdersItem">Zamówienia</ListViewItem>
                <ListViewItem x:Name="StatsItem">Statystyki</ListViewItem>
            </ListView>
            <ToggleButton x:Name="LanguageToggle" Content="EN/PL" 
                          Checked="LanguageToggle_Checked" 
                          Unchecked="LanguageToggle_Unchecked" Margin="10,30,10,0"/>
            <Button x:Name="LogoutButton" Content="Wyloguj się" Margin="10,10,10,0" 
                    Click="LogoutButton_Click"/>
            <Button x:Name="GoToClientButton" Content="Tryb Klienta" Margin="10,10,10,0"
                    Click="GoToClient_Page"/>
        </StackPanel>

        <!-- Widoki - wszystko w Grid.Column 1 -->
        <Grid Grid.Column="1">
            <!-- Dashboard -->
            <Grid x:Name="DashboardView" Visibility="Visible">
                <TextBlock Text="Witamy w Panelu Admina!" 
                           FontWeight="Bold" FontSize="26" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            <!-- Widok książek -->
            <views:BooksPage x:Name="BooksView" Visibility="Collapsed"/>
            <!-- Widok użytkowników -->
            <views:UserPage x:Name="UsersView" Visibility="Collapsed"/>
            <!-- Widok zamówień -->
            <Grid x:Name="OrdersView" Visibility="Collapsed"/>
            <!-- Widok statystyk -->
            <Grid x:Name="StatsView" Visibility="Collapsed"/>
            <!-- Widok admina (opcjonalny) -->
            <Grid x:Name="AdminView" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
