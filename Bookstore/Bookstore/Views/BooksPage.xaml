<UserControl x:Class="Bookstore.Views.BooksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bookstore.Views" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0 0 0 16">
                <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                   Margin="0 0 0 8">
            Dostępne książki
                </TextBlock>
                <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" 
                   Margin="0 0 0 16">
            Przeglądaj wszystkie dostępne książki.
                </TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox" 
                     Grid.Column="0"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Szukaj książek..."
                     Margin="0 0 8 0"/>
                    <Button x:Name="RefreshButton"
                    Grid.Column="1"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    ToolTip="Odśwież listę ofert"
                    Click="RefreshButton_Click">
                        <materialDesign:PackIcon Kind="Refresh" />
                    </Button>
                </Grid>
            </StackPanel>

            <Grid Grid.Row="1">
                <ListView x:Name="BooksListView" 
                  MouseDoubleClick="BooksListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Tytuł" DisplayMemberBinding="{Binding Title}" Width="150"/>
                            <GridViewColumn Header="Autor" DisplayMemberBinding="{Binding AuthorDisplay}" Width="150"/>
                            <GridViewColumn Header="ISBN" DisplayMemberBinding="{Binding Isbn}" Width="150"/>
                        </GridView>
                    </ListView.View>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignGridViewItem}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

                <TextBlock x:Name="NoResultsText" 
                   Text="Brak dostępnych ofert" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                   Visibility="Collapsed"/>

                <materialDesign:Card x:Name="LoadingCard"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Padding="16"
                           Visibility="Visible">
                    <StackPanel>
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            IsIndeterminate="True"
                            HorizontalAlignment="Center"
                            Margin="0 0 0 16"/>
                        <TextBlock Text="Ładowanie książek..."
                          HorizontalAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        
        </Grid>
</UserControl>
