<UserControl x:Class="Bookstore.Views.BooksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bookstore.Views" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewModels="clr-namespace:Bookstore.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModels:BookViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 0 0 16">
            <StackPanel Orientation="Horizontal" Margin="10">
                <StackPanel Margin="0, 0, 20, 0" HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                               Text="Lista książek" Margin="0 0 0 0">
                    </TextBlock>
                    <TextBlock Style="{StaticResource MaterialDesignBody1TextBlock}" 
                               Text="Przeglądaj wszystkie książki." Margin="0 0 0 0">
                    </TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="Dodaj nową książkę"
                            Command="{Binding AddBookCommand}">
                        <materialDesign:PackIcon Kind="Plus" />
                    </Button>
                </StackPanel>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Szukaj książek..."
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0 0 8 0"/>
                <Button Grid.Column="1"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="Odśwież listę ofert"
                        Command="{Binding LoadBooksCommand}">
                    <materialDesign:PackIcon Kind="Refresh" />
                </Button>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="1">
            <ListBox ItemsSource="{Binding Books}"
                     SelectionMode="Single"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Visibility="{Binding NoResults, Converter={StaticResource BooleanToVisibilityInverseConverter}}">

                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="SelectionChanged">
                        <behaviors:InvokeCommandAction Command="{Binding BookSelectedCommand}" 
                                                      CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ListBox}, Path=SelectedItem}"/>
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card 
                        Margin="10"
                        Padding="16"
                        Width="200"
                        Background="{DynamicResource MaterialDesignCardBackground}">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       TextWrapping="Wrap"/>

                                <TextBlock Text="{Binding AuthorDisplay}" 
                                       Margin="0,8,0,0" 
                                       TextWrapping="Wrap"/>

                                <TextBlock Text="{Binding Isbn}" 
                                       FontStyle="Italic" 
                                       Margin="0,1,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="Brak dostępnych ofert" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       Visibility="{Binding NoResults, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <materialDesign:Card HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Padding="16"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 IsIndeterminate="True"
                                 HorizontalAlignment="Center"
                                 Margin="0 0 0 16"/>
                    <TextBlock Text="Ładowanie książek..."
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>